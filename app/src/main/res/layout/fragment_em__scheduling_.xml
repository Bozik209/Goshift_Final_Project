    <Button
        android:id="@+id/Clear_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="32dp"
        android:text="ניקוי"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/send_button"/>

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:textStyle="bold"
        android:text="שליחה"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Clear_button" />

    <CheckBox
        android:id="@+id/checkBox_SuNi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox_MoNi"
        app:layout_constraintEnd_toStartOf="@+id/ID_Title_Night" />

    <CheckBox
        android:id="@+id/checkBox_SuEv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_TitleLeft"
        app:layout_constraintTop_toTopOf="@+id/checkBox_MoEv" />

    <CheckBox
        android:id="@+id/checkBox_SuMo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline_TitleLeft"
        app:layout_constraintTop_toTopOf="@+id/checkBox_MoMo" />

    <CheckBox
        android:id="@+id/checkBox_MoNi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintEnd_toStartOf="@+id/checkBox_SuNi"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_MoEv" />

    <CheckBox
        android:id="@+id/checkBox_MoEv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox_TuEv"
        app:layout_constraintStart_toEndOf="@+id/checkBox_TuEv" />

    <CheckBox
        android:id="@+id/checkBox_MoMo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox_TuMo"
        app:layout_constraintEnd_toEndOf="@+id/ID_Day_Mon2" />

    <!--=====================Sunday======================-->

    <CheckBox
        android:id="@+id/checkBox_TuNi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
