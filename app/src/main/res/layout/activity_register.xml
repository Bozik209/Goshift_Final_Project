<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.RegisterActivity"
    android:background="@drawable/homebackgrond"
    android:gravity="center"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/Register_FullName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="שם מלא"
            android:textColorHint="#ffff"
            android:inputType="textPersonName"
            android:textSize="25dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/Register_UserID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="תעודת זהות"
            android:textColorHint="#ffff"
            android:inputType="number"
            android:textSize="25dp"
            android:gravity="center"/>


        <EditText
            android:id="@+id/Register_UserPhone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="מספר נייד"
            android:textColorHint="#ffff"
            android:inputType="number"
            android:textSize="25dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/Register_password"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPassword"
            android:hint="@string/prompt_password"
            android:textColorHint="@color/white"
            android:imeOptions="actionDone"
            android:selectAllOnFocus="true"
            android:textSize="25dp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/Register_Email"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="@string/prompt_email"
            android:textColorHint="#ffff"
            android:textSize="25dp"
            android:gravity="center"/>

        <CheckBox
            android:id="@+id/checkBox_Em"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="FragmentView"
            android:text="עובד"
            android:textColor="#ffff"
            android:textSize="25dp"/>

        <CheckBox
            android:id="@+id/checkBox_Ma"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="FragmentView"
            android:text="מנהל"
            android:textColor="#ffff"
            android:textSize="25dp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/Fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5">

    </FrameLayout>

    <Button
        android:id="@+id/Register_SubmitButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="הרשמה"
        android:onClick="Register_func"
        android:textSize="25dp"/>
</LinearLayout>
