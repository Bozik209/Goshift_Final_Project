        android:layout_marginLeft="9dp"
        app:layout_constraintStart_toEndOf="@+id/checkBox_WeNi"
        app:layout_constraintTop_toTopOf="@+id/checkBox_MoNi" />

    <CheckBox
        android:id="@+id/checkBox_TuEv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox_WeEv"
        app:layout_constraintStart_toEndOf="@+id/checkBox_WeEv" />

    <CheckBox
        android:id="@+id/checkBox_TuMo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox_WeMo"
        app:layout_constraintStart_toEndOf="@+id/checkBox_WeMo" />

    <CheckBox
        android:id="@+id/checkBox_WeNi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox_TuNi"
        app:layout_constraintStart_toEndOf="@+id/checkBox_ThNi" />

    <!--====================Monday======================-->

    <CheckBox
        android:id="@+id/checkBox_WeEv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox_ThEv"
        app:layout_constraintStart_toEndOf="@+id/checkBox_ThEv" />

    <CheckBox
        android:id="@+id/checkBox_WeMo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox_ThMo"
        app:layout_constraintEnd_toEndOf="@+id/ID_Day_Wed4" />

    <CheckBox
        android:id="@+id/checkBox_ThNi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox_WeNi"
        app:layout_constraintStart_toEndOf="@+id/checkBox_FrNi" />

    <CheckBox
        android:id="@+id/checkBox_ThEv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox_FrEv"
        app:layout_constraintStart_toEndOf="@+id/checkBox_FrEv" />

    <!--====================Tuesday====================-->

    <CheckBox
        android:id="@+id/checkBox_ThMo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
