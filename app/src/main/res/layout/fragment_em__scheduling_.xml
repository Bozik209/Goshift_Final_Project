        app:layout_constraintStart_toEndOf="@+id/checkBox_SatNi"
        app:layout_constraintTop_toTopOf="@+id/checkBox_ThNi" />

    <CheckBox
        android:id="@+id/checkBox_FrEv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="27dp"
        app:layout_constraintStart_toEndOf="@+id/checkBox_SatEv"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_FrMo" />

    <CheckBox
        android:id="@+id/checkBox_FrMo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="17dp"
        app:layout_constraintStart_toEndOf="@+id/checkBox_SatMo"
        app:layout_constraintTop_toBottomOf="@+id/ID_Day_Fri6" />

    <!--==================Wednesday======================-->

    <CheckBox
        android:id="@+id/checkBox_SatNi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox_FrNi"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_SatEv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox_FrEv"
        app:layout_constraintStart_toStartOf="parent" />

    <CheckBox
        android:id="@+id/checkBox_SatMo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox_FrMo"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/Week_spinner"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline_TopDays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--=====================Thursday=====================-->

    <TextView
        android:id="@+id/ID_Title_Day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="23dp"
        android:layout_marginRight="23dp"
        android:text="@string/Title_Day"
        app:layout_constraintEnd_toStartOf="@+id/guideline_TitleRight"
        app:layout_constraintTop_toTopOf="@+id/ID_Day_Sun1" />

    <TextView
        android:id="@+id/ID_Title_Morning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="14dp"
        android:text="@string/Title_Morning"
        app:layout_constraintStart_toEndOf="@+id/checkBox_SuMo"
        app:layout_constraintTop_toTopOf="@+id/checkBox_SuMo" />

    <TextView
        android:id="@+id/ID_Title_Evening"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginLeft="21dp"
        android:layout_marginBottom="1dp"
        android:text="@string/Title_Evening"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox_SuEv"
        app:layout_constraintStart_toStartOf="@+id/guideline_TitleLeft" />

    <TextView
        android:id="@+id/ID_Title_Night"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:text="@string/Title_Night"
        app:layout_constraintBottom_toBottomOf="@+id/checkBox_SuNi"
        app:layout_constraintStart_toStartOf="@+id/guideline_TitleLeft" />

    <!--=====================Friday=====================-->

    <TextView
        android:id="@+id/ID_Day_Sun1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="14dp"
        android:text="@string/Day_Sun1"
        app:layout_constraintBottom_toTopOf="@+id/checkBox_SuMo"
        app:layout_constraintStart_toStartOf="@+id/checkBox_SuMo" />

    <TextView
        android:id="@+id/ID_Day_Mon2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:text="@string/Day_Mon2"
        app:layout_constraintBaseline_toBaselineOf="@+id/ID_Day_Sun1"
        app:layout_constraintEnd_toStartOf="@+id/ID_Day_Sun1" />

    <TextView
        android:id="@+id/ID_Day_Tue3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:text="@string/Day_Tue3"
        app:layout_constraintBaseline_toBaselineOf="@+id/ID_Day_Wed4"
        app:layout_constraintEnd_toStartOf="@+id/checkBox_MoMo" />

    <TextView
        android:id="@+id/ID_Day_Wed4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="@string/Day_Wed4"
        app:layout_constraintBaseline_toBaselineOf="@+id/ID_Day_Thu5"
        app:layout_constraintStart_toEndOf="@+id/ID_Day_Thu5" />

    <!--====================Saturday=========================-->

    <TextView
        android:id="@+id/ID_Day_Thu5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="23dp"
        android:text="@string/Day_Thu5"
        app:layout_constraintStart_toEndOf="@+id/ID_Day_Fri6"
        app:layout_constraintTop_toTopOf="@+id/guideline_TopDays" />

    <TextView
        android:id="@+id/ID_Day_Fri6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/Day_Fri6"
        app:layout_constraintBaseline_toBaselineOf="@+id/ID_Day_Thu5"
        app:layout_constraintStart_toStartOf="@+id/checkBox_FrMo" />

    <TextView
        android:id="@+id/ID_Day_Sat7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="23dp"
        android:text="@string/Day_Sat7"
        app:layout_constraintBaseline_toBaselineOf="@+id/ID_Day_Fri6"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_TopDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="99dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_BottomDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="333dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_TitleRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline_TitleLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="323dp" />

</android.support.constraint.ConstraintLayout>

