<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/EM_fragemt_container"
    tools:context="Activitys.EmployeeActivity"
    android:background="@color/backgroundcolor">

    <!-- TODO: find how enter toolbar in all layout-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@drawable/work_background">

            <TextView
                android:id="@+id/hello_User"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:textSize="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:orientation="vertical">


                <Button
                    android:id="@+id/EM_Final_button"
                    android:layout_width="400dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rounded_button"
                    android:onClick="Fragment_move"
                    android:text="לוז סופי"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/EM_Summary_button"
                    android:layout_width="400dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rounded_button"
                    android:onClick="Fragment_move"
                    android:text="סיכום שכר"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <Button
                    android:id="@+id/EM_Scheduling_button"
                    android:layout_width="400dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rounded_button"
                    android:onClick="Fragment_move"
                    android:text="שיבוץ משמרות"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/> />

            <Button
                android:id="@+id/EM_Logout_button"
                android:layout_width="400dp"
                android:layout_height="80dp"
                android:background="@drawable/rounded_button"
                android:onClick="Fragment_move"
                android:text="התנתקות"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/> />

        </LinearLayout>


    </LinearLayout>

</FrameLayout>