        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox_FrMo"
        app:layout_constraintStart_toEndOf="@+id/checkBox_FrMo" />

    <CheckBox
        android:id="@+id/checkBox_FrNi"
        android:layout_width="0dp"
